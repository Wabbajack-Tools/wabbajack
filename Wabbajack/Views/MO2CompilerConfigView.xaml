<UserControl x:Class="Wabbajack.Views.MO2CompilerConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wabbajack"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="0,8,0,8">
        <TextBlock FontSize="20" Text="Select your MO2 Profile:"/>
        <local:FilePicker Height="30" FontSize="14" PathType="File" DoExistsCheck="False"
                          PromptTitle="Select the MO2 profile"
                          Filter="{Binding ProfileFileFilter}"
                          TargetPath="{Binding ProfileFilePath}"
                          AdditionalError="{Binding ProfilePathError}"/>
        <Button HorizontalAlignment="Right" Margin="0,8,0,0" 
                IsEnabled="{Binding EnableBegin}" Command="{Binding BeginCommand}">
            <TextBlock FontSize="20" Text="Next"/>
        </Button>
    </StackPanel>
</UserControl>
